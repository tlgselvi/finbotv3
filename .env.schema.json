{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Port Isolation Schema",
  "description": "Port yapılandırma şeması - projeler arası çakışmayı önler",
  "type": "object",
  "properties": {
    "PORT": {
      "type": "string",
      "description": "HTTP server portu",
      "pattern": "^[0-9]+$",
      "examples": ["3000", "4000", "5000", "8000"]
    },
    "WS_PORT": {
      "type": "string", 
      "description": "WebSocket server portu",
      "pattern": "^[0-9]+$",
      "examples": ["3050", "4050", "5050", "8050"]
    },
    "VITE_API_URL": {
      "type": "string",
      "description": "API base URL",
      "format": "uri",
      "examples": ["http://localhost:5000", "http://localhost:4000"]
    },
    "VITE_WS_URL": {
      "type": "string",
      "description": "WebSocket URL",
      "format": "uri",
      "examples": ["ws://localhost:5050", "ws://localhost:4050"]
    }
  },
  "required": ["PORT", "WS_PORT", "VITE_API_URL", "VITE_WS_URL"],
  "additionalProperties": false
}
