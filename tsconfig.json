{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./QuickServeAPI/client/src/*"],
      "@shared/*": ["./QuickServeAPI/shared/*"]
    }
  },
  "include": [
    "QuickServeAPI/client/src/**/*",
    "QuickServeAPI/shared/**/*",
    "QuickServeAPI/server/**/*"
  ],
  "exclude": [
    "node_modules",
    "QuickServeAPI/node_modules",
    "cto-coach-v2/node_modules",
    "dist",
    "build"
  ]
}
